{
  "name": "flex-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "vite --open",
    "dev:backend": "convex dev",
    "build": "vite build",
    "lint": "biome check --write .",
    "lint:check": "biome check .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "tsc -p convex -noEmit && tsc -p . -noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "check": "pnpm run typecheck && pnpm run lint:check && pnpm run test run",
    "preview": "vite preview"
  },
  "dependencies": {
    "@blocknote/core": "^0.37.0",
    "@blocknote/mantine": "^0.37.0",
    "@blocknote/react": "^0.37.0",
    "@convex-dev/auth": "^0.0.80",
    "@convex-dev/presence": "^0.1.5",
    "@convex-dev/prosemirror-sync": "^0.1.28",
    "clsx": "^2.1.1",
    "convex": "^1.24.2",
    "posthog-js": "^1.265.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^4.0.9",
    "autoprefixer": "~10",
    "dotenv": "^16.4.7",
    "jsdom": "^27.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "~8",
    "tailwindcss": "~3",
    "typescript": "~5.7.2",
    "vite": "^6.2.0",
    "vitest": "^4.0.9"
  }
}
